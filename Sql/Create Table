###1
CREATE TABLE TB_CAS_DICOM_DATA
(
    DCM_ID	VARCHAR(18)	PRIMARY KEY,
    DCM_SET_ID	NUMBER(10),
    FILE_PTH	VARCHAR(50),
    DCM_DRT	VARCHAR(10),
    DICOM_DRT_ID	NUMBER(10),
    DS_TP	CHAR(1),
    FILE_SZ	NUMBER(20),
    PXL	NUMBER(10),
    FILE_WDTH	NUMBER(10),
    FILE_HIGH	NUMBER(10),
    LBD_TP	CHAR(1),
    FILE_ORGIN	VARCHAR(18),
    LOAD_DT	DATE,
    PRD_DT	DATE,
    DT_TXT	VARCHAR(18)
)
TABLESPACE TS_CAS_DICOM_DATA;


###2
CREATE TABLE DG.TB_CAS_APPLY_INFO (
	APL_NO NUMBER(15) NOT NULL,
	USR_ID VARCHAR(18) NOT NULL,
	USR_NM VARCHAR(10) NOT NULL,
	APL_DT DATE NOT NULL,
	USR_AC_DT DATE,
	USR_TELNO CHAR(13) NOT NULL,
	USR_EMAIL VARCHAR(30) DEFAULT NULL,
	APL_INTNT VARCHAR(50) DEFAULT NULL,
	APL_STAT CHAR(1) NOT NULL,
	USR_CTR VARCHAR(10),
	START_DT DATE NOT NULL,
	END_DT DATE NOT NULL,
	REF_DATA VARCHAR(50) DEFAULT NULL,
	AC_TM NUMBER(10) DEFAULT 0,
	DO_STAT CHAR(5)
)
TABLESPACE DGDATA1;


[CONSTRAINT]
ALTER TABLE DG.TB_CAS_APPLY_INFO
ADD CONSTRAINT PK_TB_CAS_APPLY_INFO PRIMARY KEY(APL_NO, USR_ID);

ALTER TABLE DG.TB_CAS_APPLY_INFO
ADD CONSTRAINT CHECK_DATE_TB_CAS_APPLY_INFO
CHECK (START_DT < END_DT);


[GRANT]
GRANT DELETE ON DG.TB_CAS_APPLY_INFO TO APP_OD;
GRANT INSERT ON DG.TB_CAS_APPLY_INFO TO APP_OD;
GRANT SELECT ON DG.TB_CAS_APPLY_INFO TO APP_OD;
GRANT UPDATE ON DG.TB_CAS_APPLY_INFO TO APP_OD;


[COMMENT]
COMMENT ON COLUMN DG.TB_CAS_APPLY_INFO.APL_NO IS '신청번호';
COMMENT ON COLUMN DG.TB_CAS_APPLY_INFO.USR_ID IS '유저아이디';
COMMENT ON COLUMN DG.TB_CAS_APPLY_INFO.USR_NM IS '유저이름';
COMMENT ON COLUMN DG.TB_CAS_APPLY_INFO.APL_DT IS '신청일시';
COMMENT ON COLUMN DG.TB_CAS_APPLY_INFO.USR_AC_DT IS '사용일시';
COMMENT ON COLUMN DG.TB_CAS_APPLY_INFO.USR_TELNO IS '연락처';
COMMENT ON COLUMN DG.TB_CAS_APPLY_INFO.USR_EMAIL IS '이메일';
COMMENT ON COLUMN DG.TB_CAS_APPLY_INFO.APL_INTNT IS '신청목적';
COMMENT ON COLUMN DG.TB_CAS_APPLY_INFO.APL_STAT IS '승인상태';
COMMENT ON COLUMN DG.TB_CAS_APPLY_INFO.USR_CTR IS '사용센터위치';
COMMENT ON COLUMN DG.TB_CAS_APPLY_INFO.START_DT IS '이용시작일시';
COMMENT ON COLUMN DG.TB_CAS_APPLY_INFO.END_DT IS '이용종료일시';
COMMENT ON COLUMN DG.TB_CAS_APPLY_INFO.REF_DATA IS '유저등록자료';
COMMENT ON COLUMN DG.TB_CAS_APPLY_INFO.AC_TM IS '이용접속시간';
COMMENT ON COLUMN DG.TB_CAS_APPLY_INFO.DO_STAT IS '신청상태';


[SYNONYM]
CREATE SYNONYM KK.TB_CAS_APPLY_INFO
FOR DG.TB_CAS_APPLY_INFO;



